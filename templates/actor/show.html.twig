{% extends 'base.html.twig' %}

{% block title %}Acteur{% endblock %}

{% block body %}
    <h1>Acteur</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ actor.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ actor.name }}</td>
        </tr>
        </tbody>
    </table>
    {% for program in actor.programs %}
        <li><a href="{{ path("program_show", {program: program.slug }) }}"> {{ program.title }}</a> </li>
    {% else %}
        <li>Aucune s√©rie pour cet acteur</li>
    {% endfor %}

{% endblock %}
