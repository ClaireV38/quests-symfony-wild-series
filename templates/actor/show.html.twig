{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    <h1>Actor</h1>
    <div class="container">
        <img class="align-self-start mr-3" src="{{ vich_uploader_asset(actor, 'photoFile') }}" alt="{{ actor.name }} poster">

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actor.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ actor.name }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ actor.photo }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ actor.updatedAt ? actor.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('actor_index') }}">back to list</a>

    <a href="{{ path('actor_edit', {'id': actor.id}) }}">edit</a>

    {{ include('actor/_delete_form.html.twig') }}
    </div>
{% endblock %}
