<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {{ encore_entry_link_tags('app') }}
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Sriracha&display=swap" rel="stylesheet">
    {% block stylesheets %}
    {% endblock %}
    <link rel="icon" href="{{ asset('build/images/fav.ico') }}" />
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-secondary bg-primary">
        <a class="navbar-brand" href="/">
            <img class="logo" src="{{ asset('build/images/logocroped.jpg') }}" alt="logo"/>
        </a>
        <button class="navbar-toggler border-secondary" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link active text-secondary" href="/">Home <span class="sr-only">(current)</span></a>
            </div>
            <div class="navbar-nav">
                <a class="nav-item nav-link active text-secondary" href="/programs/">Programs <span class="sr-only">(current)</span></a>
            </div>
            <div class="navbar-nav">
                <a class="nav-item nav-link active text-secondary" href="/categories/">Categories <span class="sr-only">(current)</span></a>
            </div>
            {% if app.user %}
                {{ app.user.name }}
            <div class="navbar-nav">
                <a class="nav-item nav-link active text-secondary" href="{{ path('app_profile') }}"> Mon profil</a>
            </div>
            <div class="navbar-nav">
                <a class="nav-item nav-link active text-secondary" href="{{ path('app_logout') }}"> Se d√©connecter</a>
            </div>
            {% else %}
                <a class="nav-item nav-link active text-secondary" href="{{ path('app_login') }}"> Se connecter</a>
            {% endif %}
        </div>
    </nav>
</header>
{% for category, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ category }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
{% block body %}{% endblock %}

{{ encore_entry_script_tags('app') }}
{% block javascripts %}
{% endblock %}
</body>
</html>
