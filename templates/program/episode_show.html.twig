{% extends 'base.html.twig' %}

{% block title %} season {{ season.number }} {{ program.title }} {% endblock %}

{% block body %}
    <div class="container">
        <div class="card">
            <div class="card-body">
                <h2 class="mt-0">{{ program.title }}</h2>
                <h3>saison : {{ season.number }}</h3>
                <h3>episode {{ episode.number }} : {{ episode.title }}</h3>
                <p>{{ episode.synopsis }}</p>
            </div>
        </div>
        {% for comment in episode.comments|reverse %}
            <div class="card">
                <h3>commentaire :</h3> <p> {{ comment.comment }} </p>
            <h3>note : {{ comment.rate }}</h3>
            <h3>auteur : {{ comment.author.name }}</h3>
            </div>
        {% endfor %}
        {% if app.user %}
            <br>
            <h4>Ajouter un commentaire</h4>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn">{{ button_label|default('Save') }}</button>
            {{ form_end(form) }}
        {% endif %}
    </div>
{% endblock %}
