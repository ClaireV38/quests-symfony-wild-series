{% extends 'base.html.twig' %}
{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{ program.poster }}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.synopsis }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            <p>Année de diffusion : {{ program.year }}</p>
            <p>Pays : {{ program.country }}</p>
            <p><strong>Saisons disponibles :</strong>
            <ul>
                {% for season in programSeasons %}
                    <li>
                        <a href="{{ path("program_season_show", { program: program.slug, season: season.id }) }}">saison {{ season.number }}</a>
                        année : {{ season.year }}
                    </li>
                {% else %}
                    Aucune saison trouvée.
                {% endfor %}
            </ul>
            </p>
            <strong>Acteurs :</strong>
            <ul>
                {% for actor in program.actors %}
                    <li><a href="{{ path("actor_show", { id: actor.id }) }}"> {{ actor.name }}</a></li>
                {% else %}
                    <li>Aucun acteur pour cette série</li>
                {% endfor %}
            </ul>
            {% if is_granted("ROLE_ADMIN") %}
                <a href="{{ path('program_edit', { 'program': program.slug} ) }}">Éditer</a>
            {% endif %}
            {{ include('program/_delete_form.html.twig') }}
            {% if app.user %}
                <div>
                    <i id="watchlist" class="{{ app.user.isInWatchlist(program) ? 'fas' : 'far' }} fa-heart watchlist"
                       data-text=”{{ path('program_watchlist', {'program': program.slug}) }}”></i>
                </div>
            {% endif %}
        </div>
    </div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('watchlist') }}
{% endblock %}

