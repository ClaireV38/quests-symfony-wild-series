{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}

        <h1>Creer son compte</h1>

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email, { 'label': 'rentrez votre email' }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'rentrez votre mot de passe'
        }) }}
        {{ form_row(registrationForm.name, { 'label': 'rentrez votre nom' }) }}
        {{ form_row(registrationForm.bio, { 'label': 'd√©crivez vous en quelques lignes (facultatif)' }) }}
        {{ form_row(registrationForm.agreeTerms, { 'label': 'j\'accepte les termes' }) }}

        <button class="btn btn-primary btn-center type="submit" class="btn">Confirmer</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
