{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container">
        <h1>Mon profil</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Mon adresse mail</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Bio</th>
                <td>{{ user.bio }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Mon adresse mail a t'elle ete vérifiée</th>
                <td>{{ user.isVerified ? 'oui' : 'non' }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('app_index') }}"><button class="btn btn-primary btn-center">revenir à l'accueil</button></a>

        <a href="{{ path('user_edit', {'id': user.id}) }}"><button class="btn btn-primary btn-center">editer mon profil</button></a>

        {{ include('user/_delete_form.html.twig') }}

    </div>
{% endblock %}
